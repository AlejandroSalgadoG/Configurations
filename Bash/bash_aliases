# Functions

slurm(){
    case "$1" in
        "on" )
            vboxmanage startvm Slurmaster --type headless
            vboxmanage startvm Slurm1 --type headless
            vboxmanage startvm Slurm2 --type headless ;;
        "auto" )
            case "$2" in
                "on" )
                    vboxmanage startvm SlurmasterAuto --type headless
                    vboxmanage startvm Slurm1Auto --type headless
                    vboxmanage startvm Slurm2Auto --type headless ;;
                "off" )
                    vboxmanage controlvm SlurmasterAuto poweroff
                    vboxmanage controlvm Slurm1Auto poweroff
                    vboxmanage controlvm Slurm2Auto poweroff ;;
                * )
                    echo Help:
                    echo '  slurm auto on|off'
                    return 1 ;;
            esac ;;
        "off" )
            vboxmanage controlvm Slurmaster poweroff
            vboxmanage controlvm Slurm1 poweroff
            vboxmanage controlvm Slurm2 poweroff ;;
        "list" )
            vboxmanage list runningvms ;;
        * )
            echo Help:
            echo '  slurm [auto] on|off|list'
            return 1 ;;
    esac
}

cs(){
    cd $1 && ls
}

usb(){
    if [ -z $1 ]; then
        echo Help:
        echo 'usb on|off'
        return 1
    fi

    if [ "$1" == "on" ]; then
        sudo mount /dev/sdb /mnt
        cd /mnt
    elif [ "$1" == "off" ]; then
        cd
        sudo umount /mnt
    else
        echo "Unknown option"
        return 1
    fi
}

gitssh(){
    if [ -z $1 ]; then
        echo "Help:"
        echo "gitssh [ip]"
        echo "example: gitssh git@github..."
    else
        git remote set-url origin $1
    fi
}

gip(){
    if [ -z $1 ]; then
        echo "Help:"
        echo "gip [ip]"
        echo "example: gip 192.168.1.0"
    else
        sudo nmap -sP $1
    fi
}

Ncl(){
    export NCARG_ROOT=/mnt/home/alejandro/SC15/Wrf/Programs/Ncl/
    export PATH=/mnt/home/alejandro/SC15/Wrf/Programs/Ncl/bin:$PATH
}

centos(){
    if [ -z $1 ]; then
        sudo mount /dev/sda10 /mnt
        cd /mnt/home/alejandro/SC15/Wrf/Programs/Ncl/lib/ncarg/nclscripts/wrf
    elif [ "$1" == "on" ]; then
        sudo mount /dev/sda10 /mnt
        sudo mount --bind /dev /mnt/dev/
        sudo mount --bind /dev/pts /mnt/dev/pts
        sudo mount --bind /proc/ /mnt/proc/
        sudo mount --bind /sys /mnt/sys
        echo "Welcome to Centos 7"
        sudo chroot /mnt
    elif [ "$1" == "off" ]; then
        sudo umount /mnt/sys
        sudo umount /mnt/proc/
        sudo umount /mnt/dev/pts
        sudo umount /mnt/dev
        sudo umount /mnt && echo "Welcome to Ubuntu 14.10"
    else
        echo "Help:"
        echo "centos [on | off]"
    fi
}

zpp(){
    RTSP=/home/alejandro/Github/Zpp/RTSP

    case "$1" in
        "a" )
            cd $RTSP/Android/RTSP/app/src/main/java/sise/rtsp ;;
        "c" )
            cd $RTSP/CImplementation/Server ;;
        "ce" )
            cd $RTSP/CImplementation/Examples/Socket/Udp ;;
        "co" )
            cd $RTSP/Legacy/Full
            javac -d /home/alejandro/Github/Zpp/RTSP/Legacy/Full/class/ MultiServer.java
            javac -d /home/alejandro/Github/Zpp/RTSP/Legacy/Full/class/ Client.java
            javac -d /home/alejandro/Github/Zpp/RTSP/Legacy/Full/class/ RTPpacket.java
            javac -d /home/alejandro/Github/Zpp/RTSP/Legacy/Full/class/ Server.java
            javac -d /home/alejandro/Github/Zpp/RTSP/Legacy/Full/class/ ServerThread.java
            javac -d /home/alejandro/Github/Zpp/RTSP/Legacy/Full/class/ VideoStream.java ;;
        "j" )
            cd $RTSP/JImplementation/Client ;;
        "je" )
            cd $RTSP/JImplementation/Examples/Sockets/Basic/Udp ;;
        "l" )
            cd $RTSP/Legacy/Full ;;
        * )
            cd $RTSP ;;
    esac
}


copy(){
    xclip -sel clip $1
}

find2(){
    find . -iname $1
}

multi(){
    if [ -z $1 ]; then
        xrandr --auto
    fi

    case "$1" in
        "right" )
            case "$2" in
                "vga" )
                    xrandr --output DP1 --auto --$1-of eDP1 ;;
                "hdmi" )
                    xrandr --output HDMI1 --auto --$1-of eDP1 ;;
                * )
                    echo "Output not recognised" ;;
            esac ;;
        "left" )
            case "$2" in
                "vga" )
                    xrandr --output DP1 --auto --$1-of eDP1 ;;
                "hdmi" )
                    xrandr --output HDMI1 --auto --$1-of eDP1 ;;
                * )
                    echo "Output not recognised" ;;
            esac ;;
        "same" )
            case "$2" in
                "vga" )
                    xrandr --output DP1 --same-as eDP1 ;;
                "hdmi" )
                    xrandr --output HDMI1 --same-as eDP1 ;;
                * )
                    echo "Output not recognised" ;;
            esac ;;
        "special" )
            xrandr --output HDMI1 --mode 1920x1080 --left-of eDP1 --output DP1 --auto --left-of HDMI1 ;;
        * )
            echo "$1 is not a valid option, use same or direction" ;;
    esac
}

get(){
    history | grep $1
}

refresh(){
    source ~/.bash_aliases
    echo Done
}

mkjar(){
        fl=$1 && javac $1 && echo Main-Class: ${fl/.java/""} > MANIFEST.MF && jar -cvmf MANIFEST.MF ${fl/.java/.jar} ${fl/.java/.class}
        rm -f ${program/.java/.class} MANIFEST.MF
}

run(){
	program=$1
    javac $1
    if [ $? -eq 0 ]; then
        if [ -z $2 ]; then
            java ${program/.java/""}
        else
            java ${program/.java/""} ${*:2}
        fi
    fi

    rm -f *.class
}

hrun(){
    program=$1
    ghc $1
    if [ $? -eq 0 ]; then
        echo ""
        ./${program/.hs/""}
    fi

    rm -f *.hi *.o ${program/.hs/""}
}

pdfbib(){
	archivo=$1;
    latex $1
    if [ $? -eq 0 ]; then
        bibtex ${archivo/.tex/.aux}
        latex $1
        latex $1
        pdflatex $1
        cpdf
        open ${archivo/.tex/".pdf"}
    fi
}

pdf(){
	archivo=$1;
    pdflatex $1
    if [ $? -eq 0 ]; then
        cpdf
        open ${archivo/.tex/".pdf"}
    fi
}

diap(){
    pdflatex $1 && cdiap && archivo=$1 && open ${archivo/.tex/.pdf}
}

tempo(){

    TIME=$[ $1 * 60 + $2]

    while [ 0 -ne $TIME ]; do
        sleep 1
        TIME=$[ $TIME - 1 ]
        echo $TIME
    done

    killall chrome
    poweroff
}
